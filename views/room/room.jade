extends ../layout

block styles
    style.
        body { background: #efefef; }
        .navbar { margin-bottom: 0; }

block content
    .container-fluid
        .row.chat-row
            #chatwrapper.container-fluid.col-lg-10.col-9.col-sm-9
                #room-info
                    h4#room-name.inline-heading #{room.name}
                    #room-topic.inline-heading #{room.description}
                #content.well
            aside#sidebar.col-lg-2.col-sm-3.col-3
                header Users
                ul#user-list
        .controls.row.col-lg-12.col-12.col-sm-12
            form#control-form.form-inline
                .col-lg-10.col-sm-10.col-10
                    input#field.form-control(type='text', placeholder='Message', autocomplete='off')
                .col-lg-2.col-sm-2.col-2
                    button#send.btn.btn-primary.btn-block(type='button') Send
        .clearfix

block scripts
    script(type='text/javascript').
        var activeUser = !{user};
    script(src='/js/helpers.js', type='text/javascript')
    script(src='/js/watercooler.js', type='text/javascript')
    script(src='/js/app.js', type='text/javascript')
